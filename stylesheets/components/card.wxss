/* CARD */
.card-wrapper {
  padding: 30rpx 10rpx 30rpx 20rpx; 
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.card-content {
  box-shadow:2px 2px 10px #0000000d;
  padding: 30rpx 40rpx; 
}

.card-image {
  width: 100%;
  height: 120px;
  border-radius: 5px;
  background-size:cover;
  background-repeat: no-repeat;
  background-position:center;
  margin-bottom: 5px;
}

.card-status {
  border-radius:8px;
  font-size:16px;
  padding:5px;
}

.card-search {
  height: 240px;
  border-radius: 6px;
  background-size:cover;
  background-repeat: no-repeat;
  background-position:center;
  margin-bottom: 5px;
  padding: 10px;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}