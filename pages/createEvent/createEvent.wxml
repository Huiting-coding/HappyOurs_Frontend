<!--pages/createEvent/createEvent.wxml-->
<view class="card-wrapper">
  <text class='f48'> Create Your Happy Hours </text>
  <form catchsubmit="formSubmit" catchreset="formReset">

    <view class="page-section">

      <view class="page-section-title mt40">TITLE</view>
      <view class="textarea-wrp">
        <textarea name="title" bindblur="bindTextAreaBlur" style="height: 2.5em" />
      </view>

      <view class="page-section-title">SUMMARY</view>
      <view class="textarea-wrp">
          <textarea name ="summary" auto-focus="true" style="height: 2.5em" />
      </view>  

      <view class="flex row justify-between">

        <view class ="flex column">
          <view class="page-section-title">DATE</view>
          <picker name="date" mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="greyinputarea fixed flex row items-center">
            <view>
              {{date}}
            </view>
            <view>
              <image class= "icon-sm absolute-r items-center" src="/pages/createEvent/calendeer.png"></image>
            </view>
          </view>
          </picker>
        </view>

        <view class ="flex column">
          <view class="page-section-title">START AT</view>
          <picker name= "startTime" mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
            <view class="greyinputarea fixed flex row items-center">
              {{time}}
              <image class= "absolute-r icon-sm " src="/pages/createEvent/coolicon.png"></image>
            </view>
          </picker>
        </view>

        <view class ="flex column">
          <view class="page-section-title">END AT</view>
          <picker name= "endTime" mode="time" value="{{endtime}}" start="09:01" end="21:01" bindchange="bindEndTimeChange">
          <view class="greyinputarea fixed flex row items-center">
              {{endtime}}
              <image class= "absolute-r icon-sm" src="/pages/createEvent/coolicon.png"></image>
          </view>
          </picker>
        </view>
      </view>

      <view class="flex column">
        <view class="page-section-title">LOCATION</view>
        <view class="greyinputarea fixed flex row items-center">
           {{location.name}}
           <image class ="icon absolute-r" src="/pages/createEvent/location.png" name="location" value="{{location}}"  bindtap="showLocation">Choose Location</image>
        </view>
        <textarea name ="locationdes" auto-focus="true" style="height: 2.5em" />
      </view>
          
      

    <!-- <map name="map" class="map" id="map" longitude="{{location.longitude}}" latitude="{{location.latitude}}" markers="{{markers}}" covers="{{covers}}"></map> -->


    <view class="page-section-title">PHOTOS</view>
    <button name="image" bindtap="addPhoto" class="button" type="file">+</button>

    <view class="page-section-title">SEAT NUMBER</view>
    <picker  name="capacity" bindchange="bindPickerChange" value="{{array[index]}}" range="{{array}}">
    <view class="picker">
      当前选择：{{array[index]}}
    </view>
  </picker>

 

  </view>
    <view class="btn-area flex justify-centere">
     <button style="margin: 30rpx 0" class="createbutton justify-center" formType="submit" >CREATE</button>
    </view>
</form>
</view>
