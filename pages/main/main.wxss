/* pages/main/main.wxss */

.logo1 {
  width: 55px;
  height: 55px;
  margin-left: 43%;
  margin-right: 50%;

}

.titleDesign {
  color: black;
  font-weight: bold;
}


.arrows {
  width: 30px;
  height: 30px;
}

.upcomingImage {
  width: 150px;
  height: 150px;
  border-radius: 10%;
}
.upcomingEvent {
  margin: 20px;
}

.bodies {
  margin: 10px;
}

.popularImage {
  width: 120px;
  height: 120px;
  border-radius: 10px;
}
.popularBackground {
  background-color: #FFE4A5;
  border-radius: 10px;
  margin: 10px;
}

.btn-flat {
  color: white;
  padding: 8px 24px;
  border-radius: 4px;
  background: #E9B741;
  transition: background 0.3s ease;
  width: 70px;
  height: 30px;
}

.btn-flat:hover {
  background: #C36A2D;
  color: white;
}

.search-bar {
  display: flex;
  margin-top: 10rpx;
  border: 2px solid #18191F;
  box-sizing: border-box;
  border-radius: 32rpx;
  align-items: center;
  padding: 20rpx;
  box-shadow: 0px 4px 0px #e7cca7;
}


.category-box {
  display: flex;
  margin-top: 30rpx;
  text-align: center;
  scroll-behavior: smooth;
  width: 100%;
  height: 300rpx;
  white-space: nowrap;  
}

.category-card {
  display: inline-block;
  padding: 10rpx;
  margin-right: 10rpx;
}

.category-photo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
}

.card-category {
  border: 2px solid #18191F;
  /* box-shadow: 0px 4px 0px #18191F; */
  box-sizing: border-box;
  border-radius: 32rpx;
  margin-left: 10rpx;
  position: relative;
  width: 250rpx;
}

.card-product {
  overflow: hidden;
  height: 120px;
  display: flex;
  align-items: center;
  padding: 16px;
}

.page-section-spacing{
  margin-top: 0px;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 300rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 450rpx;
}

.avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}