
<!--pages/eventdetails/eventdetails.wxml-->
<!-- <text>pages/eventdetails/eventdetails.wxml</text> -->
<view class="contain">
  <view> 
    <view class="flex justify-between">
      <image class= "icons" bindtap="bindViewTap" src="/pages/eventdetails/leftbutton.png"></image>
      <image class="icons" src="/pages/eventdetails/coolicon.png"></image>
    </view>

    <image class="mainImage" src="/pages/eventdetails/edward-howell-55bQ7g3ZlQU-unsplash.jpg">
    </image>
  </view>

  <view>
    <view>
      <text>{{event.name}}</text>
    </view>

    <view>
      <view>
        <image class="icons" src="/pages/eventdetails/location.png">icon</image>
        <text>{{event.location}}</text>
      </view>

      <view>
        <image class="icons" src="/pages/eventdetails/calendar.png"> icon</image>
        <text>{{event.begins_at}}</text>
      </view>

      <view>
        <image class="icons" src="/pages/eventdetails/instagram.png">icon</image>
        <text>{{event.capacity}} seats available</text>
      </view>

    </view>
  </view>
  
  <text>{{event.summary}}</text>

  <view class="gallery">
    <text>Gallery</text>
    <view>
      <image class="slideGallery" src="/pages/eventdetails/julia-nastogadka-AMwYylKQsUc-unsplash.jpg"></image>
      <image class="slideGallery" src="/pages/eventdetails/brian-jones-YBlcnXfv9OM-unsplash.jpg"></image>
      <image class="slideGallery" src="/pages/eventdetails/sergio-alves-santos-OxKFC5u0980-unsplash.jpg"></image>
    </view>
  </view>

  <view >
    <text>Map</text>
    <view>
      <image class="location" src="/pages/eventdetails/Screenshot 2022-01-06 at 21.18.19.png">Location</image>
    </view>
  </view>

  <view>
    <navigator class="btn btn-flat" href="#">Book now</navigator>
  </view>

</view>
