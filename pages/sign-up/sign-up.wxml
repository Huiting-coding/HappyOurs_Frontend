    <view> Your reservation is as below: </view>
    <view> Happy Event:{{event.name}} </view>
    <view> Happy Date:{{event.begins_at}} </view>
    <view> Number of seats:{{array[index]}} </view>
    <view> Phone Number：{{phoneNumber}} </view>
  </modal> -->
</form>
</view>





 