/* pages/sign-up/sign-up.wxss */
.page {
  padding: 20px;
}
.header {
padding: 80rpx;
font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
font-size: 40rpx;
margin-top: 40rpx;
text-align: center;
}

.eventinfo {
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  justify-items: center;
  color: #C36A2D;
  background-color: #eedfbb;
}

.page-section {
}

.page-section-title {
  padding-right: 20rpx;
}

.page-section-answer {
  display: flex;
  border: 2px solid #C36A2D;
  height: 50rpx;
  width: auto;
  padding-left: 20rpx;
}


.btn-area{
  padding: 0 30px;
}
.btn-area button{
  margin-top: 200rpx;
  margin-bottom: 20rpx;
  background: #E9B741;
  transition: background 0.3s ease;
  font-style: bolder;
}

.btn-area button:hover {
  background: #C36A2D;
  color: white;
}